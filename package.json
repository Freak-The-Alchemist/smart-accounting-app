{
  "name": "smart-accounting-app",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "dev": "pnpm --recursive run dev",
    "build": "pnpm --recursive run build",
    "test": "cross-env NODE_ENV=test CI=true FIREBASE_API_KEY=test-api-key FIREBASE_AUTH_DOMAIN=test-project.firebaseapp.com FIREBASE_PROJECT_ID=test-project FIREBASE_STORAGE_BUCKET=test-project.appspot.com FIREBASE_MESSAGING_SENDER_ID=123456789 FIREBASE_APP_ID=1:123456789:web:abcdef pnpm --recursive run test",
    "lint": "pnpm --recursive run lint",
    "test:watch": "pnpm --recursive run test:watch",
    "test:coverage": "pnpm --recursive run test:coverage",
    "test:ci": "pnpm --recursive run test:ci",
    "test:firestore": "jest --config jest.firestore.config.js",
    "test:security": "jest --config jest.security.config.js"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "react": "18.2.0",
      "react-dom": "18.2.0",
      "react-native": "0.73.4",
      "firebase": "9.23.0",
      "@types/react": "18.2.56",
      "@types/react-dom": "18.2.19"
    }
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^4.0.1",
    "@google-cloud/vision": "^5.1.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/react-native": "^12.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/file-saver": "^2.0.5",
    "@types/jest": "^29.0.0",
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "firebase-admin": "^11.0.0",
    "firebase-functions": "^4.0.0",
    "firebase-functions-test": "^3.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "jest-expo": "^47.0.0",
    "jest-firestore": "^0.0.1",
    "msw": "^2.8.4",
    "prettier": "^3.0.0",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "exceljs": "^4.4.0",
    "expo-av": "^12.0.0",
    "expo-file-system": "^14.0.0",
    "expo-image-picker": "^13.0.0",
    "file-saver": "^2.0.5",
    "firebase": "^9.0.0",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.5.31",
    "xlsx": "^0.18.5"
  }
}
