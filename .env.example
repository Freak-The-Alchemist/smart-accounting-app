# =============================================
# Firebase Configuration
# =============================================
# Required API key (format: AIzaSy...)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=smart-accounting-2bf04.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=smart-accounting-2bf04
VITE_FIREBASE_STORAGE_BUCKET=smart-accounting-2bf04.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=
# Required App ID (format: 1:1234567890:web:...)
VITE_FIREBASE_APP_ID=

# =============================================
# Emulator Configuration
# =============================================
VITE_FIREBASE_USE_EMULATOR=true
VITE_FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
VITE_FIREBASE_FIRESTORE_EMULATOR_HOST=localhost:8080
VITE_FIREBASE_DATABASE_EMULATOR_HOST=localhost:9000
VITE_FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199
VITE_FIREBASE_FUNCTIONS_EMULATOR_HOST=localhost:5001

# =============================================
# Feature Flags
# =============================================
VITE_ENABLE_OCR=true
VITE_ENABLE_VOICE_INPUT=true
VITE_ENABLE_EXCEL_EXPORT=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CRASH_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_AUTO_BACKUP_ENABLED=true

# =============================================
# App Configuration
# =============================================
VITE_APP_ENV=development
VITE_APP_DEBUG=true
VITE_APP_VERSION=1.0.0
VITE_LOG_LEVEL=debug

# =============================================
# API Configuration
# =============================================
VITE_API_URL=http://localhost:5000
VITE_API_VERSION=v1
VITE_CORS_ENABLED=true
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW_MS=900000

# =============================================
# Security Settings
# =============================================
VITE_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006
VITE_MAX_FILE_SIZE=5242880  # 5MB
VITE_MAX_UPLOAD_FILES=10

# =============================================
# OCR Configuration
# =============================================
VITE_OCR_LANGUAGE=eng
VITE_OCR_TIMEOUT=30000
VITE_OCR_CONFIDENCE_THRESHOLD=0.7

# =============================================
# Voice Input Configuration
# =============================================
VITE_VOICE_RECOGNITION_TIMEOUT=10000
VITE_VOICE_RECOGNITION_LANGUAGE=en-US
VITE_VOICE_RECOGNITION_CONTINUOUS=false

# =============================================
# Excel Export Configuration
# =============================================
VITE_EXCEL_MAX_ROWS=10000
VITE_EXCEL_DATE_FORMAT=YYYY-MM-DD
VITE_EXCEL_TIME_FORMAT=HH:mm:ss

# =============================================
# Performance & Caching
# =============================================
VITE_CACHE_DURATION=3600000  # 1 hour in milliseconds

# =============================================
# Backup & Sync
# =============================================
VITE_BACKUP_INTERVAL=86400000  # 24 hours in milliseconds
VITE_SYNC_INTERVAL=300000  # 5 minutes in milliseconds

# =============================================
# Mobile App Configuration (Expo)
# =============================================
VITE_EXPO_APP_ID=com.smartaccounting.app
VITE_EXPO_VERSION=1.0.0
VITE_EXPO_BUILD_NUMBER=1
VITE_EXPO_UPDATES_ENABLED=true
VITE_EXPO_UPDATES_CHECK_ON_LAUNCH=ALWAYS
VITE_EXPO_UPDATES_FALLBACK_TO_CACHE_TIMEOUT=0